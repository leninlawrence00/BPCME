<body class="hold-transition skin-blue sidebar-mini">
<div class="wrapper">


    <% include header %>
    <!-- Left side column. contains the logo and sidebar -->
    <aside class="main-sidebar">
        <% include menu %>

    </aside>

    <!-- Content Wrapper. Contains page content -->
    <div class="content-wrapper">
        <!-- Content Header (Page header) -->
        <section class="content-header">
            <h1>
                Item Details
                <small>Add Item</small>
            </h1>
            <ol class="breadcrumb">
                <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
                <li><a href="#">Add Item</a></li>

            </ol>
        </section>

        <!-- Main content -->
        <section class="content">
            <div class="row">
                <div class="col-xs-10">
                    <div class="box box-primary">

                        <!-- form start -->
                        <form role="form">
                            <div class="box-body">
                                <div class="row ">
                                    <div class="col-sm-4 col-md-4 col-lg-4">
                                        <div class="form-group">
                                            <label for="fullname">Brand : </label>
                                            <select id="brand" class="form-control" >
                                                <option value="" selected="selected">Please Select the brand</option>
                                                <% for(var i=0;i<brands.length;i++)
                                                {
                                                %>
                                                <option value="<%= brands[i]._id%>"><%= brands[i].brand %></option>
                                                <%
                                                }
                                                %>
                                            </select>


                                        </div>
                                    </div>
                                    <div class="col-sm-2 col-md-2 col-lg-2">
                                        <div class="form-group">
                                            <label for="fullname">Add New </label>
                                            <a class="btn btn-success" id="btn_add_brand" > Add New </a>

                                        </div>
                                    </div>

                                    <div class="col-sm-4 col-md-4 col-lg-4">
                                        <div class="form-group">
                                            <label for="username">Model :</label>
                                            <select id="model" class="form-control" >
                                                <option value="" selected="selected">Please Select the Model</option>
                                            </select>

                                        </div>
                                    </div>
                                    <div class="col-sm-2 col-md-2 col-lg-2">
                                        <div class="form-group">
                                            <label for="fullname">Add New </label>
                                            <button class="btn btn-success" id="btn_add_model"> Add New </button>

                                        </div>
                                    </div>

                                </div>

                                <div class="row">
                                    <div class="col-sm-6 col-md-6 col-lg-6">
                                        <div class="form-group">
                                            <label for="fullname">Part No/Configuration : </label>
                                            <input type="text" class="form-control" id="phone" placeholder="Enter Part No/Configuration">

                                        </div>
                                    </div>

                                    <div class="col-sm-6 col-md-6 col-lg-6">
                                        <div class="form-group">
                                            <label for="username">Description : </label>
                                            <input type="text" class="form-control" id="description" placeholder="Description">
                                        </div>
                                    </div>

                                </div>
                                <div class="row">
                                    <div class="col-sm-6 col-md-6 col-lg-6">
                                        <div class="form-group">
                                            <label for="fullname">Search Keywords</label>
                                            <input type="text" class="form-control" id="street" placeholder="search keywords">
                                        </div>
                                    </div>

                                    <div class="col-sm-6 col-md-6 col-lg-6">
                                        <div class="form-group">
                                            <label for="username">Opening Quantity :</label>
                                            <input type="text" class="form-control" id="op_quantity" placeholder="Enter opening Quantity">
                                        </div>
                                    </div>

                                </div>
                                <div class="row">
                                    <div class="col-sm-6 col-md-6 col-lg-6">
                                        <div class="form-group">
                                            <label for="fullname">Unit Price </label>
                                            <input type="text" class="form-control" id="street" placeholder="Enter Unit Price">
                                        </div>
                                    </div>
                                    <div class="col-sm-6 col-md-6 col-lg-6">
                                        <div class="form-group">
                                            <label for="exampleInputPassword1">Known As : </label>
                                            <input type="text" class="form-control" id="item_code" >
                                        </div>
                                    </div>


                                </div>



                                <div class="row">
                                    <div class="col-sm-6 col-md-6 col-lg-6">
                                        <button type="button" class="btn btn-success" id="submit">    Submit   </button>
                                    </div>

                                    <div class="col-sm-6 col-md-6 col-lg-6">
                                        <button type="reset" class="btn btn-primary" id="reset">    Reset   </button>
                                    </div>

                                </div>

                            </div><!-- /.box-body -->


                        </form>
                    </div><!-- /.box -->


                </div><!-- /.col -->
            </div><!-- /.row -->

            <!-- Add new brand -->
            <div id="myModal" class="modal fade">
                <div class="modal-dialog">
                    <div class="modal-content">
                        <div class="modal-header">
                            <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                            <h4 class="modal-title">Add New Brand</h4>
                        </div>
                        <div class="modal-body">
                            <div class="box box-primary">

                                <!-- form start -->
                                <form role="form">
                                    <div class="box-body">
                                        <div class="form-group">
                                            <label for="fullname"> Brand Name : </label>
                                            <input type="text" class="form-control" id="brand_new" placeholder="Enter Model Name">
                                        </div>


                                    </div><!-- /.box-body -->


                                </form>
                            </div><!-- /.box -->
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                            <button type="button" id="submt_brand" class="btn btn-primary">Save changes</button>
                        </div>
                    </div>
                </div>
            </div>
            <div class="modal fade" id="myModal1" role="dialog">
                <div class="modal-dialog">

                    <!-- Modal content-->
                    <div class="modal-content">
                        <div class="modal-header">
                            <button type="button" class="close" data-dismiss="modal">&times;</button>
                            <h4 class="modal-title">Confirmation</h4>
                        </div>
                        <div class="modal-body">
                            <p>Brand has successfully been added</p>
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-default" data-dismiss="modal">OK</button>
                        </div>
                    </div>

                </div>
            </div>
        </section><!-- /.content -->
    </div><!-- /.content-wrapper -->
    <footer class="main-footer">
        <div class="pull-right hidden-xs">
            <b>Version</b> 2.3.0
        </div>

    </footer>


    <!-- Add the sidebar's background. This div must be placed
         immediately after the control sidebar -->
    <div class="control-sidebar-bg"></div>
</div><!-- ./wrapper -->

<!-- jQuery 2.1.4 -->
<script src="plugins/jQuery/jQuery-2.1.4.min.js"></script>
<!-- Bootstrap 3.3.5 -->
<script src="bootstrap/js/bootstrap.min.js"></script>
<!-- DataTables -->
<script src="plugins/datatables/jquery.dataTables.min.js"></script>
<script src="plugins/datatables/dataTables.bootstrap.min.js"></script>
<!-- SlimScroll -->
<script src="plugins/slimScroll/jquery.slimscroll.min.js"></script>
<!-- FastClick -->
<script src="plugins/fastclick/fastclick.min.js"></script>
<!-- AdminLTE App -->
<script src="dist/js/app.min.js"></script>
<!-- AdminLTE for demo purposes -->
<script src="dist/js/demo.js" ></script>
<!-- page script -->
<script>
    $(function(){
        $('#btn_add_brand').on('click',function(){
            $("#myModal").modal('show');
        });
        $('#submt_brand').on('click',function(){
           var brand = $('#brand_new').val();
            if(brand=='')
            {
                alert('Brand name should not be blank');
            }
            else
            {

                $.post("./brand/addbrand",{brand:brand},function(data){

                    console.log(data);
                    if(data.status=1)
                    {
                        $("#myModal").modal('hide');
                        $("#myModal1").modal('show');

                        var option = new Option(data.brand.brand, data.brand._id);
                        $('#brand').append($(option));
                    }

                });
            }
        });
